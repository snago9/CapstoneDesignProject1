<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExamPage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/gray_box"
            android:layout_width="400dp"
            android:layout_height="650dp"
            android:background="@drawable/gray_bg2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.85" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dgm"
            android:text="@string/testing"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/gray_box"
            app:layout_constraintEnd_toEndOf="@+id/gray_box"
            app:layout_constraintHorizontal_bias="0.015"
            app:layout_constraintStart_toStartOf="@+id/gray_box"
            app:layout_constraintTop_toTopOf="@+id/gray_box"
            app:layout_constraintVertical_bias="0.007" />

        <ImageView
            android:id="@+id/q_box"
            android:layout_width="330dp"
            android:layout_height="80dp"
            android:background="@drawable/question_box"
            app:layout_constraintBottom_toBottomOf="@+id/gray_box"
            app:layout_constraintEnd_toEndOf="@+id/gray_box"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/gray_box"
            app:layout_constraintTop_toTopOf="@+id/gray_box"
            app:layout_constraintVertical_bias="0.065" />

        <TextView
            android:id="@+id/test_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dgm"
            android:text="@string/ex_text"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/q_box"
            app:layout_constraintEnd_toEndOf="@+id/q_box"
            app:layout_constraintStart_toStartOf="@+id/q_box"
            app:layout_constraintTop_toTopOf="@+id/q_box"
            app:layout_constraintVertical_bias="0.254" />

        <ImageView
            android:id="@+id/select_test_view"
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:background="@drawable/exam_box"
            app:layout_constraintBottom_toBottomOf="@+id/gray_box"
            app:layout_constraintEnd_toEndOf="@+id/gray_box"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/gray_box"
            app:layout_constraintTop_toTopOf="@+id/gray_box"
            app:layout_constraintVertical_bias="0.52" />

        <TextView
            android:id="@+id/problem"
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:fontFamily="@font/dgm"
            android:text="@string/ex_text"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/select_test_view"
            app:layout_constraintEnd_toEndOf="@+id/select_test_view"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@+id/select_test_view"
            app:layout_constraintTop_toTopOf="@+id/select_test_view"
            app:layout_constraintVertical_bias="0.207" />


        <RadioGroup
            android:id="@+id/choiceRadio"
            android:layout_width="297dp"
            android:layout_height="131dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/select_test_view"
            app:layout_constraintEnd_toEndOf="@+id/select_test_view"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="@+id/select_test_view"
            app:layout_constraintTop_toTopOf="@+id/select_test_view"
            app:layout_constraintVertical_bias="0.724">


            <RadioButton
                android:id="@+id/choiceA"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:fontFamily="@font/dgm" />

            <RadioButton
                android:id="@+id/choiceB"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:fontFamily="@font/dgm" />

            <RadioButton
                android:id="@+id/choiceC"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:fontFamily="@font/dgm"/>

            <RadioButton
                android:id="@+id/choiceD"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:fontFamily="@font/dgm" />

        </RadioGroup>

        <ImageButton
            android:id="@+id/next"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:background="@drawable/login_button"
            app:layout_constraintBottom_toBottomOf="@+id/gray_box"
            app:layout_constraintEnd_toEndOf="@+id/gray_box"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/gray_box"
            app:layout_constraintTop_toTopOf="@+id/gray_box"
            app:layout_constraintVertical_bias="0.94" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dgm"
            android:text="@string/next"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="@+id/next"
            app:layout_constraintEnd_toEndOf="@+id/next"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/next"
            app:layout_constraintTop_toTopOf="@+id/next"
            app:layout_constraintVertical_bias="0.5" />

        <ImageButton
            android:id="@+id/h_back"
            android:layout_width="25sp"
            android:layout_height="30sp"
            android:background="@drawable/back_btn"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/gray_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>