<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="-116dp">

        <ImageView
            android:id="@+id/h_top_box"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:background="@drawable/home_top_box"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/h_top_white_box"
            android:layout_width="374dp"
            android:layout_height="177dp"
            android:background="@drawable/white_box"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/h_top_box"
            app:layout_constraintEnd_toEndOf="@+id/h_top_box"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintStart_toStartOf="@+id/h_top_box"
            app:layout_constraintTop_toTopOf="@+id/h_top_box"
            app:layout_constraintVertical_bias="0.547" />

        <ImageView
            android:id="@+id/h_face_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/faceimage"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/h_top_white_box"
            app:layout_constraintEnd_toEndOf="@+id/h_top_white_box"
            app:layout_constraintHorizontal_bias="0.118"
            app:layout_constraintStart_toStartOf="@+id/h_top_white_box"
            app:layout_constraintTop_toTopOf="@+id/h_top_white_box"
            app:layout_constraintVertical_bias="0.453" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dgm"
            android:gravity="center"
            android:text="@string/nickname"
            android:textColor="@color/main"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/h_top_white_box"
            app:layout_constraintEnd_toEndOf="@+id/h_top_white_box"
            app:layout_constraintHorizontal_bias="0.394"
            app:layout_constraintStart_toStartOf="@+id/h_face_image"
            app:layout_constraintTop_toTopOf="@+id/h_top_white_box"
            app:layout_constraintVertical_bias="0.22" />

        <ImageView
            android:id="@+id/h_D_day_box"
            android:layout_width="240dp"
            android:layout_height="20dp"
            android:background="@drawable/day_box"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="@+id/h_top_white_box"
            app:layout_constraintEnd_toEndOf="@+id/h_top_white_box"
            app:layout_constraintHorizontal_bias="0.745"
            app:layout_constraintStart_toStartOf="@+id/h_face_image"
            app:layout_constraintTop_toTopOf="@+id/h_top_white_box"
            app:layout_constraintVertical_bias="0.929" />

        <ImageView
            android:id="@+id/h_goal_box"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginStart="116dp"
            android:background="@drawable/goal_box"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="@+id/h_top_white_box"
            app:layout_constraintEnd_toEndOf="@+id/h_top_white_box"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/h_face_image"
            app:layout_constraintTop_toTopOf="@+id/h_top_white_box"
            app:layout_constraintVertical_bias="0.567" />

        <TextView
            android:id="@+id/goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dgm"
            android:gravity="center"
            android:text="@string/goal"
            android:textColor="@color/main"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/h_goal_box"
            app:layout_constraintEnd_toEndOf="@+id/h_goal_box"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintStart_toStartOf="@+id/h_goal_box"
            app:layout_constraintTop_toTopOf="@+id/h_goal_box"
            app:layout_constraintVertical_bias="0.145" />

        <ImageButton
            android:id="@+id/h_start_box"
            android:layout_width="280sp"
            android:layout_height="130sp"
            android:background="@drawable/start_btn"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.47" />

        <ImageView
            android:id="@+id/h_bottom_box"
            android:layout_width="fill_parent"
            android:layout_height="260dp"
            android:background="@drawable/home_bottom_box"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/notifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dgm"
            android:gravity="center"
            android:text="@string/notifi"
            android:textColor="@color/main"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/h_bottom_box"
            app:layout_constraintEnd_toEndOf="@+id/h_bottom_box"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintStart_toStartOf="@+id/h_bottom_box"
            app:layout_constraintTop_toTopOf="@+id/h_bottom_box"
            app:layout_constraintVertical_bias="0.145" />

        <ImageView
            android:id="@+id/h_menu_box"
            android:layout_width="390dp"
            android:layout_height="80dp"
            android:background="@drawable/menu_box"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.985" />

        <ImageButton
            android:id="@+id/h_tocalen"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/tocalen"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="@+id/h_menu_box"
            app:layout_constraintEnd_toEndOf="@+id/h_menu_box"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintStart_toStartOf="@+id/h_menu_box"
            app:layout_constraintTop_toTopOf="@+id/h_menu_box"
            app:layout_constraintVertical_bias="0.47" />

        <ImageButton
            android:id="@+id/h_toanaly"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/toanaly"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="@+id/h_menu_box"
            app:layout_constraintEnd_toEndOf="@+id/h_menu_box"
            app:layout_constraintHorizontal_bias="0.63"
            app:layout_constraintStart_toStartOf="@+id/h_menu_box"
            app:layout_constraintTop_toTopOf="@+id/h_menu_box"
            app:layout_constraintVertical_bias="0.47" />

        <ImageButton
            android:id="@+id/h_touser"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/touser"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="@+id/h_menu_box"
            app:layout_constraintEnd_toEndOf="@+id/h_menu_box"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="@+id/h_menu_box"
            app:layout_constraintTop_toTopOf="@+id/h_menu_box"
            app:layout_constraintVertical_bias="0.47" />

        <ImageButton
            android:id="@+id/h_tohome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/tohome"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="@+id/h_menu_box"
            app:layout_constraintEnd_toEndOf="@+id/h_menu_box"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toStartOf="@+id/h_menu_box"
            app:layout_constraintTop_toTopOf="@+id/h_menu_box"
            app:layout_constraintVertical_bias="0.47" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>