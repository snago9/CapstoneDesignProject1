<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectTest">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/gray_box"
            android:layout_width="400dp"
            android:layout_height="650dp"
            android:background="@drawable/gray_bg2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.913" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dgm"
            android:text="@string/test_select_page"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/gray_box"
            app:layout_constraintEnd_toEndOf="@+id/gray_box"
            app:layout_constraintHorizontal_bias="0.015"
            app:layout_constraintStart_toStartOf="@+id/gray_box"
            app:layout_constraintTop_toTopOf="@+id/gray_box"
            app:layout_constraintVertical_bias="0.007" />

        <ImageButton
            android:id="@+id/bookmark1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/gray_circle1"
            app:layout_constraintBottom_toBottomOf="@+id/gray_box"
            app:layout_constraintEnd_toEndOf="@+id/gray_box"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="@+id/gray_box"
            app:layout_constraintTop_toTopOf="@+id/gray_box"
            app:layout_constraintVertical_bias="0.075" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dgm"
            android:text="@string/ex_text"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/bookmark1"
            app:layout_constraintEnd_toEndOf="@+id/bookmark1"
            app:layout_constraintStart_toStartOf="@+id/bookmark1"
            app:layout_constraintTop_toTopOf="@+id/bookmark1"
            app:layout_constraintVertical_bias="0.254" />

        <ImageButton
            android:id="@+id/bookmark_add"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/gray_circle2"
            app:layout_constraintBottom_toBottomOf="@+id/gray_box"
            app:layout_constraintEnd_toEndOf="@+id/gray_box"
            app:layout_constraintHorizontal_bias="0.34"
            app:layout_constraintStart_toStartOf="@+id/gray_box"
            app:layout_constraintTop_toTopOf="@+id/gray_box"
            app:layout_constraintVertical_bias="0.075" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dgm"
            android:text="@string/bookmark"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/bookmark1"
            app:layout_constraintEnd_toEndOf="@+id/bookmark1"
            app:layout_constraintStart_toStartOf="@+id/bookmark1"
            app:layout_constraintTop_toTopOf="@+id/bookmark1"
            app:layout_constraintVertical_bias="1.47" />

        <ImageView
            android:id="@+id/line"
            android:layout_width="360dp"
            android:layout_height="4dp"
            android:background="@drawable/line3"
            app:layout_constraintBottom_toBottomOf="@+id/gray_box"
            app:layout_constraintEnd_toEndOf="@+id/gray_box"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/gray_box"
            app:layout_constraintTop_toTopOf="@+id/gray_box"
            app:layout_constraintVertical_bias="0.23" />

        <ImageButton
            android:id="@+id/test_select"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/gray_select_btn1"
            app:layout_constraintBottom_toBottomOf="@+id/gray_box"
            app:layout_constraintEnd_toEndOf="@+id/gray_box"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toStartOf="@+id/gray_box"
            app:layout_constraintTop_toTopOf="@+id/gray_box"
            app:layout_constraintVertical_bias="0.26" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dgm"
            android:text="자격증 선택"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/test_select"
            app:layout_constraintEnd_toEndOf="@+id/test_select"
            app:layout_constraintHorizontal_bias="0.309"
            app:layout_constraintStart_toStartOf="@+id/test_select"
            app:layout_constraintTop_toTopOf="@+id/test_select"
            app:layout_constraintVertical_bias="0.5" />

        <ImageButton
            android:id="@+id/year_select"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/gray_select_btn2"
            app:layout_constraintBottom_toBottomOf="@+id/gray_box"
            app:layout_constraintEnd_toEndOf="@+id/gray_box"
            app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintStart_toStartOf="@+id/gray_box"
            app:layout_constraintTop_toTopOf="@+id/gray_box"
            app:layout_constraintVertical_bias="0.26" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dgm"
            android:text="년도회차"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/year_select"
            app:layout_constraintEnd_toEndOf="@+id/year_select"
            app:layout_constraintHorizontal_bias="0.294"
            app:layout_constraintStart_toStartOf="@+id/year_select"
            app:layout_constraintTop_toTopOf="@+id/year_select"
            app:layout_constraintVertical_bias="0.5" />

        <ImageButton
            android:id="@+id/chapter_select"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/gray_select_btn2"
            app:layout_constraintBottom_toBottomOf="@+id/gray_box"
            app:layout_constraintEnd_toEndOf="@+id/gray_box"
            app:layout_constraintHorizontal_bias="0.785"
            app:layout_constraintStart_toStartOf="@+id/gray_box"
            app:layout_constraintTop_toTopOf="@+id/gray_box"
            app:layout_constraintVertical_bias="0.26" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dgm"
            android:text="챕터"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/chapter_select"
            app:layout_constraintEnd_toEndOf="@+id/chapter_select"
            app:layout_constraintHorizontal_bias="0.435"
            app:layout_constraintStart_toStartOf="@+id/chapter_select"
            app:layout_constraintTop_toTopOf="@+id/chapter_select"
            app:layout_constraintVertical_bias="0.5" />

        <ImageButton
            android:id="@+id/num_select"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/gray_select_btn3"
            app:layout_constraintBottom_toBottomOf="@+id/gray_box"
            app:layout_constraintEnd_toEndOf="@+id/gray_box"
            app:layout_constraintHorizontal_bias="0.93"
            app:layout_constraintStart_toStartOf="@+id/gray_box"
            app:layout_constraintTop_toTopOf="@+id/gray_box"
            app:layout_constraintVertical_bias="0.26" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dgm"
            android:text="@string/five_num"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/num_select"
            app:layout_constraintEnd_toEndOf="@+id/num_select"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/num_select"
            app:layout_constraintTop_toTopOf="@+id/num_select"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:id="@+id/select_test_view"
            android:layout_width="350dp"
            android:layout_height="280dp"
            android:background="@drawable/white_bg2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.61" />

        <ImageButton
            android:id="@+id/edit_test"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/white_box"
            app:layout_constraintBottom_toBottomOf="@+id/select_test_view"
            app:layout_constraintEnd_toEndOf="@+id/select_test_view"
            app:layout_constraintHorizontal_bias="0.903"
            app:layout_constraintStart_toStartOf="@+id/select_test_view"
            app:layout_constraintTop_toTopOf="@+id/select_test_view"
            app:layout_constraintVertical_bias="0.139" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dgm"
            android:text="@string/edit"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/edit_test"
            app:layout_constraintEnd_toEndOf="@+id/edit_test"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/edit_test"
            app:layout_constraintTop_toTopOf="@+id/edit_test" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dgm"
            android:text="@string/ex_text"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/select_test_view"
            app:layout_constraintEnd_toEndOf="@+id/select_test_view"
            app:layout_constraintStart_toStartOf="@+id/select_test_view"
            app:layout_constraintTop_toTopOf="@+id/select_test_view"
            app:layout_constraintVertical_bias="0.254" />

        <ImageButton
            android:id="@+id/test_start"
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:background="@drawable/start_btn2"
            app:layout_constraintBottom_toBottomOf="@+id/gray_box"
            app:layout_constraintEnd_toEndOf="@+id/gray_box"
            app:layout_constraintHorizontal_bias="0.19"
            app:layout_constraintStart_toStartOf="@+id/gray_box"
            app:layout_constraintTop_toTopOf="@+id/gray_box"
            app:layout_constraintVertical_bias="0.9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dgm"
            android:text="@string/start"
            android:textColor="@color/main"
            android:textSize="60sp"
            app:layout_constraintBottom_toBottomOf="@+id/test_start"
            app:layout_constraintEnd_toEndOf="@+id/test_start"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/test_start"
            app:layout_constraintTop_toTopOf="@+id/test_start"
            app:layout_constraintVertical_bias="0.5" />

        <ImageButton
            android:id="@+id/start_num_select"
            android:layout_width="90dp"
            android:layout_height="76dp"
            android:background="@drawable/gray_btn1"
            app:layout_constraintBottom_toBottomOf="@+id/gray_box"
            app:layout_constraintEnd_toEndOf="@+id/gray_box"
            app:layout_constraintHorizontal_bias="0.916"
            app:layout_constraintStart_toStartOf="@+id/gray_box"
            app:layout_constraintTop_toTopOf="@+id/gray_box"
            app:layout_constraintVertical_bias="0.897" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dgm"
            android:text="@string/five_num"
            android:textColor="@color/black"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="@+id/start_num_select"
            app:layout_constraintEnd_toEndOf="@+id/start_num_select"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/start_num_select"
            app:layout_constraintTop_toTopOf="@+id/start_num_select"
            app:layout_constraintVertical_bias="0.5" />

        <ImageButton
            android:id="@+id/h_back"
            android:layout_width="25sp"
            android:layout_height="30sp"
            android:background="@drawable/back_btn"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/gray_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>